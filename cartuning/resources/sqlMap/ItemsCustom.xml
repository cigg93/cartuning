<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ItemCustom">
	
	<resultMap id="itemCustoms" type="com.cc.entity.ItemsCustom">
		<result column="id" property="id"/>
		<result column="item_name" property="name"/>
		<result column="item_price" property="price"/>
	</resultMap>
	
	<select id="getItemCustoms" resultMap="itemCustoms" parameterType="java.util.HashMap">
		select *
		from t_itemcustomer
		where item_name like "%"#{q}"%"
	</select>
	
	<insert id="insertItemCustoms" parameterType="com.cc.entity.ItemsCustom">
		insert into t_itemcustomer
		(
			item_name,
			item_price
		)
		values
		(
			#{name},
			#{price}
		)
		<selectKey resultType="int" keyProperty="id">
			select LAST_INSERT_ID();
		</selectKey>
	</insert>
	
	
	
</mapper>